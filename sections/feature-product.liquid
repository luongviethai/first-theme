{% comment %} 
  Section: Featured Products - Hiển thị danh sách sản phẩm từ collection được chọn.
{% endcomment %}

<div class="featured-products section-{{ section.id }}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  {% assign collection = collections[section.settings.collection] | default: collections.all %}
  {% assign products_to_show = section.settings.products_to_show | default: 4 %}
  {% assign columns = section.settings.columns_desktop | default: 4 %}
  
  <div class="product-grid" style="display: grid; grid-template-columns: repeat({{ columns }}, 1fr); gap: 20px;">
    {% for product in collection.products limit: products_to_show %}
      <div class="product-item">
        {% if product.featured_image %}
          <a href="{{ product.url }}" class="product-image">
            <img src="{{ product.featured_image | image_url: width: 240, height: 240 }}" alt="{{ product.title | escape }}" />
          </a>
        {% endif %}
        <h3 class="product-title">
          <a href="{{ product.url }}">{{ product.title }}</a>
        </h3>
        <p class="product-price">{{ product.price | money }}</p>
        {% if section.settings.show_add_to_cart %}
          <form action="/cart/add" method="post">
            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
            <button type="submit" class="add-to-cart">Add to Cart</button>
          </form>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  
  {% if section.settings.show_view_all %}
    <a href="{{ collection.url }}" class="view-all">View All Products</a>
  {% endif %}
</div>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "featured-products-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Number of Products to Show",
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Columns on Desktop",
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_add_to_cart",
      "label": "Show Add to Cart Button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "settings": {
        "title": "Featured Products",
        "collection": "all",
        "products_to_show": 4,
        "columns_desktop": 4,
        "show_add_to_cart": true,
        "show_view_all": true,
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  ]
}
{% endschema %}

{% stylesheet %}
.featured-products .section-title {
  text-align: center;
  margin-bottom: 20px;
  font-size: 2em;
}
.featured-products .product-item {
  text-align: center;
  border: 1px solid #ddd;
  padding: 10px;
  border-radius: 5px;
}
.featured-products .product-image img {
  max-width: 100%;
  height: auto;
}
.featured-products .product-title {
  font-size: 1.2em;
  margin: 10px 0;
}
.featured-products .product-price {
  font-weight: bold;
  color: #333;
}
.featured-products .add-to-cart {
  background-color: #007bff;
  color: white;
  padding: 8px 16px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
{% endstylesheet %}
